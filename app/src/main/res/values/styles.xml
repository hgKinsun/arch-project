<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal2</item>
        <item name="colorAccent">@color/amber</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/none</item>
    </style>

    <style name="Text.14">
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="Text.24">
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="Text.24.Amber">
        <item name="android:textColor">@color/amber</item>
    </style>

</resources>
